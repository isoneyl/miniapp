<properties>    <!-- 聊天消息数据索引 -->    <property name="chatMsgNumMapping">        <![CDATA[        {            "settings":{                "number_of_shards":1,                "number_of_replicas":1,                "index.refresh_interval":"5s"            },            "mappings":{                "properties":{                    "userId":{                        "type":"long"                    },                    "sendId":{                        "type":"long"                    },                    "num":{                        "type":"long"                    },                    "orgId":{                        "type":"long"                    }                }            }        }]]>    </property>    <!-- 聊天消息数据查询 -->    <property name="searchChatNum">        <![CDATA[            {              "query": {                "bool": {                  "must": [                    #if($userId) ##用户Id                    {                      "term": {                        "userId": {                          "value": #[userId]                        }                      }                    }                     #end                     #if($projectId) ##项目Id                     ,                    {                      "term": {                        "projectId": {                          "value": #[projectId]                        }                      }                    }                    #end                    #if($orgId) ##组织Id                     ,                    {                      "term": {                        "orgId": {                          "value": #[orgId]                        }                      }                    }                    #end                  ]                  #if($num) ##数量                  ,                  "filter": {                    "range": {                        "num": {                        "gt": #[num]                        }                    }                  }                  #end                }              }            }        ]]>    </property>    <!-- 更新项目聊天数量表数据 -->    <property name="updateChatNumToZero">        <![CDATA[            {              "script": {                "source": "ctx._source.num= 0"              },              "query": {                "bool": {                  "must": [                    {                      "term": {                        "userId":                        {                          "value": #[userId]                         }                      }                    },                    {                      "term": {                        "projectId":                        {                          "value": #[projectId]                         }                      }                    },                    {                      "term": {                        "orgId":                        {                          "value": #[orgId]                         }                      }                    }                  ]                }              }            }        ]]>    </property></properties>